<chart>
	<!-- Define the chart type -->	
	<dataset-type>XYSeriesCollection</dataset-type> 
	<chart-type>LineChart</chart-type>
	<!-- Specify the orientation of the bars (vertical/horizontal) -->
	<orientation>vertical</orientation>
	<!-- Specify the 3D-ness of the bars -->
	<is-3D>false</is-3D>
	<!-- Specify if the bars are stacked -->
	<is-stacked>false</is-stacked>
	<!--  Line Chart properties -->
	<markers-visible>true</markers-visible>
	<line-style>none</line-style>
	<line-width>0</line-width>
    <dot-width>1</dot-width>
    <dot-height>1</dot-height>

	<!-- Specify the title of the chart -->
	<title>XY Line Chart</title>

	<!-- Specify the location of the title -->
	<title-position>TOP</title-position>

	<!-- Specify the font of the title -->
	<title-font>
		<font-family>Arial</font-family>
		<size>14</size>
		<is-bold>true</is-bold>
		<is-italic>false</is-italic>
	</title-font>
	<subtitles>
	  <subtitle>Product Line - Sales vs Units Ordered</subtitle>
	  <subtitle>For Years 2003 - 2005</subtitle>
	  </subtitles>

    <!-- General Chart Propeties --> 
	<chart-background type="color">#FFFFFF</chart-background>
	<plot-background type="color">#EEEEEE</plot-background>
	<border-visible>false</border-visible>
	<border-paint>#000000</border-paint>
	
	<!--  X-Axis properties -->
	<domain-title>Units Ordered</domain-title>
	<domain-title-font>
      <font-family>Arial</font-family>
	  <size>12</size>
	  <is-bold>false</is-bold>
	  <is-italic>false</is-italic>	
	</domain-title-font>
	<domain-tick-font>
      <font-family>Arial</font-family>
	  <size>12</size>
	  <is-bold>false</is-bold>
	  <is-italic>false</is-italic>	
	</domain-tick-font>	
	<domain-label-rotation>.7</domain-label-rotation>
	<domain-label-rotation-dir></domain-label-rotation-dir>
    <domain-minimum>700</domain-minimum>
	<domain-maximum>1900</domain-maximum>
	<tooltip-x-format>0</tooltip-x-format>
	
	<!--  Y-Axis properties -->
	<range-title>Sales</range-title>
	<range-title-font>
      <font-family>Arial</font-family>
	  <size>12</size>
	  <is-bold>false</is-bold>
	  <is-italic>false</is-italic>	
	</range-title-font>
    <range-tick-format>0,000 ($)</range-tick-format>
    <range-tick-font>
      <font-family>Arial</font-family>
	  <size>12</size>
	  <is-bold>false</is-bold>
	  <is-italic>false</is-italic>	
    </range-tick-font>
	<range-minimum>25000</range-minimum>
	<range-maximum>400000</range-maximum>
	<tooltip-y-format>0</tooltip-y-format>
	<!-- Specify is the chart legend should be shown -->
	<include-legend>true</include-legend>
    <legend-font>
      <font-family>Arial</font-family>
	  <size>12</size>
	  <is-bold>false</is-bold>
	  <is-italic>false</is-italic>
    </legend-font> 
	
	<!-- Specify the color palette for the chart -->
	<color-palette>
		<color>#387179</color>
		<color>#626638</color>
		<color>#A8979A</color>
		<color>#B09A6B</color>
		<color>#772200</color>
		<color>#C52F0D</color>
		<color>#123D82</color>
		<color>#4A0866</color>
		<color>#445500</color>
		<color>#FFAA00</color>
		<color>#1E8AD3</color>
		<color>#AA6611</color>
		<color>#772200</color>
	</color-palette>

	<!-- Specify where the data for the chart comes from -->
	<data>
		<!-- Specify the path to the action sequence that provides the data -->
		<data-solution></data-solution>
		<data-path>/public/pentaho-solutions/bi-developers/charts/xychart_data.xaction</data-path>
		<data-action></data-action>

		<!-- Specify the output of the action sequence that contains the data -->
		<data-output>results</data-output>
		
		<!-- Specify whether to get the chart series from the rows or columns -->
		<data-orientation>columns</data-orientation>
	</data>	
	
</chart>