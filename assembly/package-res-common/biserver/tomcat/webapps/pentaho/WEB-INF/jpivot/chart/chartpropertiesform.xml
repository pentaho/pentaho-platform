<?xml version="1.0" encoding="iso-8859-1"?>

<xform style="manual">
<table border="1" cellspacing="0" cellpadding="2">

 <tr>
  <th colspan="2" class="xform-title">
   <table border="0" cellspacing="0" cellpadding="0" width="100%">
    <tr>
     <th align="left" class="xform-title">
      Chart Properties
     </th>
     <td align="right" class="xform-close-button">
      <imgButton src="wcf/form/cancel.png" action="revert" label="Close" hide="true" handler="com.tonbeller.wcf.form.ButtonHandler"/>
     </td>
    </tr>
   </table>
  </th>
 </tr>

 <tr>
  <td>Chart Type</td>
  <td>
   <listBox1 type="int" modelReference="chartType">
	<listItem value="1" label="Vertical Bar"/>
	<listItem value="2" label="Vertical Bar 3D"/>
	<listItem value="3" label="Hozontal Bar"/>
	<listItem value="4" label="Horizontal Bar 3D"/>
	<listItem value="5" label="Stacked Vertical Bar"/>
	<listItem value="6" label="Stacked Vertical Bar 3D"/>
	<listItem value="7" label="Stacked Horizontal Bar"/>
	<listItem value="8" label="Stacked Horizontal Bar 3D"/>
	<listItem value="9" label="Vertical Line"/>
	<listItem value="10" label="Horizontal Line"/>
	<listItem value="11" label="Vertical Area"/>
	<listItem value="12" label="Horizontal Area"/>
	<listItem value="13" label="Vertical Stacked Area"/>
	<listItem value="14" label="Horizontal Stacked Area"/>
	<listItem value="15" label="Pie Charts by Column"/>
	<listItem value="16" label="Pie Charts by Row"/>
   </listBox1>
  </td>
 </tr>

 <tr>
  <td>Enable Drill Through</td>
  <td>
   <checkBox modelReference="drillThroughEnabled"/>
  </td>
 </tr>

 <tr>
  <td>Chart Title</td>
  <td>
   <textField type="string" modelReference="chartTitle" size="30" title="enter a title for this chart"/>
  </td>
 </tr>
 <tr>
  <td>Chart Title Font</td>
  <td>
   <listBox1 type="string" modelReference="fontName" label="Title font">
  	<listItem value="SansSerif" label="SansSerif"/>
	<listItem value="Serif" label="Serif"/>
	<listItem value="Monospaced" label="Monospaced"/>
   </listBox1>
   <listBox1 type="int" modelReference="fontStyle" label="Title font style">
  	<listItem value="0" label="Plain"/>
	<listItem value="1" label="Bold"/>
	<listItem value="2" label="Italic"/>
	<listItem value="3" label="Bold Italic"/>
   </listBox1>
   <listBox1 type="int" modelReference="fontSize" label="Title font size">
  	<listItem value="8" label="8"/>
	<listItem value="10" label="10"/>
	<listItem value="12" label="12"/>
	<listItem value="14" label="14"/>
	<listItem value="16" label="16"/>
	<listItem value="18" label="18"/>
	<listItem value="20" label="20"/>
	<listItem value="22" label="22"/>
	<listItem value="24" label="24"/>
	<listItem value="26" label="26"/>
	<listItem value="28" label="28"/>
	<listItem value="30" label="30"/>
	<listItem value="32" label="32"/>
   </listBox1>
  </td>
 </tr>
 
 <tr>
  <td>Horizontal axis label</td>
  <td>
   <textField type="string" modelReference="horizAxisLabel" size="30" title="enter a label for this axis"/>
  </td>
 </tr>
 <tr>
  <td>Vertical axis label</td>
  <td>
   <textField type="string" modelReference="vertAxisLabel" size="30" title="enter a label for this axis"/>
  </td>
 </tr>
 <tr>
  <td>Axes Label Font</td>
  <td>
   <listBox1 type="string" modelReference="axisFontName">
  	<listItem value="SansSerif" label="SansSerif"/>
	<listItem value="Serif" label="Serif"/>
	<listItem value="Monospaced" label="Monospaced"/>
   </listBox1>
   <listBox1 type="int" modelReference="axisFontStyle">
  	<listItem value="0" label="Plain"/>
	<listItem value="1" label="Bold"/>
	<listItem value="2" label="Italic"/>
	<listItem value="3" label="Bold Italic"/>
   </listBox1>
   <listBox1 type="int" modelReference="axisFontSize">
  	<listItem value="8" label="8"/>
	<listItem value="10" label="10"/>
	<listItem value="12" label="12"/>
	<listItem value="14" label="14"/>
	<listItem value="16" label="16"/>
	<listItem value="18" label="18"/>
	<listItem value="20" label="20"/>
	<listItem value="22" label="22"/>
	<listItem value="24" label="24"/>
	<listItem value="26" label="26"/>
	<listItem value="28" label="28"/>
	<listItem value="30" label="30"/>
	<listItem value="32" label="32"/>
   </listBox1>
  </td>
 </tr>
 
 <tr>
  <td>Axes Tick Label font</td>
  <td>
   <listBox1 type="string" modelReference="axisTickFontName">
  	<listItem value="SansSerif" label="SansSerif"/>
	<listItem value="Serif" label="Serif"/>
	<listItem value="Monospaced" label="Monospaced"/>
   </listBox1>
   <listBox1 type="int" modelReference="axisTickFontStyle">
  	<listItem value="0" label="Plain"/>
	<listItem value="1" label="Bold"/>
	<listItem value="2" label="Italic"/>
	<listItem value="3" label="Bold Italic"/>
   </listBox1>
   <listBox1 type="int" modelReference="axisTickFontSize">
  	<listItem value="8" label="8"/>
	<listItem value="10" label="10"/>
	<listItem value="12" label="12"/>
	<listItem value="14" label="14"/>
	<listItem value="16" label="16"/>
	<listItem value="18" label="18"/>
	<listItem value="20" label="20"/>
	<listItem value="22" label="22"/>
	<listItem value="24" label="24"/>
	<listItem value="26" label="26"/>
	<listItem value="28" label="28"/>
	<listItem value="30" label="30"/>
	<listItem value="32" label="32"/>
   </listBox1>
   <listBox1 type="int" modelReference="tickLabelRotate">
        <listItem value="0" label="0°"/>
        <listItem value="30" label="30°"/>
        <listItem value="45" label="45°"/>
        <listItem value="90" label="90°"/>
   </listBox1>
  </td>
 </tr>

 <tr>
  <td>Show Legend</td>
  <td>
   <checkBox modelReference="showLegend"/>
   <listBox1 type="int" modelReference="legendPosition">
  	<listItem value="1" label="Top"/>
	<listItem value="3" label="Bottom"/>
	<listItem value="0" label="Left"/>
	<listItem value="2" label="Right"/>
   </listBox1>
  </td>
 </tr>
 <tr>
  <td>Legend Font</td>
  <td>
   <listBox1 type="string" modelReference="legendFontName">
  	<listItem value="SansSerif" label="SansSerif"/>
	<listItem value="Serif" label="Serif"/>
	<listItem value="Monospaced" label="Monospaced"/>
   </listBox1>
   <listBox1 type="int" modelReference="legendFontStyle">
  	<listItem value="0" label="Plain"/>
	<listItem value="1" label="Bold"/>
	<listItem value="2" label="Italic"/>
	<listItem value="3" label="Bold Italic"/>
   </listBox1>
   <listBox1 type="int" modelReference="legendFontSize">
  	<listItem value="8" label="8"/>
	<listItem value="10" label="10"/>
	<listItem value="12" label="12"/>
	<listItem value="14" label="14"/>
	<listItem value="16" label="16"/>
	<listItem value="18" label="18"/>
	<listItem value="20" label="20"/>
	<listItem value="22" label="22"/>
	<listItem value="24" label="24"/>
	<listItem value="26" label="26"/>
	<listItem value="28" label="28"/>
	<listItem value="30" label="30"/>
	<listItem value="32" label="32"/>
   </listBox1>
  </td>
 </tr>

 <tr>
  <td>Show Slicer</td>
  <td>
   <checkBox modelReference="showSlicer"/>
   <listBox1 type="int" modelReference="slicerPosition" label="Slicer Position">
  	<listItem value="0" label="Top"/>
	<listItem value="1" label="Bottom"/>
	<listItem value="3" label="Left"/>
	<listItem value="2" label="Right"/>
   </listBox1>
   <listBox1 type="int" modelReference="slicerAlignment" label="Slicer Alignment">
	<listItem value="3" label="Left"/>
	<listItem value="2" label="Right"/>
	<listItem value="4" label="Center"/>
   </listBox1>
  </td>
 </tr>
 <tr>
  <td>Slicer Font</td>
  <td>
   <listBox1 type="string" modelReference="slicerFontName">
  	<listItem value="SansSerif" label="SansSerif"/>
	<listItem value="Serif" label="Serif"/>
	<listItem value="Monospaced" label="Monospaced"/>
   </listBox1>
   <listBox1 type="int" modelReference="slicerFontStyle">
  	<listItem value="0" label="Plain"/>
	<listItem value="1" label="Bold"/>
	<listItem value="2" label="Italic"/>
	<listItem value="3" label="Bold Italic"/>
   </listBox1>
   <listBox1 type="int" modelReference="slicerFontSize">
  	<listItem value="8" label="8"/>
	<listItem value="10" label="10"/>
	<listItem value="12" label="12"/>
	<listItem value="14" label="14"/>
	<listItem value="16" label="16"/>
	<listItem value="18" label="18"/>
	<listItem value="20" label="20"/>
	<listItem value="22" label="22"/>
	<listItem value="24" label="24"/>
	<listItem value="26" label="26"/>
	<listItem value="28" label="28"/>
	<listItem value="30" label="30"/>
	<listItem value="32" label="32"/>
   </listBox1>
  </td>
 </tr>

 <tr>
  <td>Chart Height</td>
  <td>
   <textField type="posint" modelReference="chartHeight" size="5" title="enter height in pixels - default 300"/>
   &#160;&#160;&#160;Chart Width
   <textField type="posint" modelReference="chartWidth" size="5" title="enter width in pixels - default 500"/>
  </td>
 </tr>
 
 <tr>
  <td>Background (R, G, B)</td>
  <td>
   <textField type="posint" modelReference="bgColorR" size="4" title="enter Red value 0-255"/>
   <textField type="posint" modelReference="bgColorG" size="4" title="enter Green value 0-255"/>
   <textField type="posint" modelReference="bgColorB" size="4" title="enter Blue value 0-255"/>
  </td>
 </tr>

 <tr>
  <td align="right" colspan="4">
    <button action="validate" label="OK" handler="com.tonbeller.wcf.form.ButtonHandler" hide="true"/>
    <button action="revert" label="Cancel" handler="com.tonbeller.wcf.form.ButtonHandler" hide="true"/>
  </td>
 </tr>

</table>

</xform>
