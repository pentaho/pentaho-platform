<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

  <id>assembly</id>

  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <files>
    <file>
      <source>${pentaho-server.directory}/META-INF/MANIFEST.MF</source>
      <outputDirectory>.</outputDirectory>
    </file>
    <!-- Add shim drivers README file -->
    <file>
      <source>${project.basedir}/src/main/resources/drivers/README</source>
      <outputDirectory>./drivers</outputDirectory>
    </file>
  </files>

  <fileSets>
    <fileSet>
      <outputDirectory>.</outputDirectory>
      <directory>${pentaho-server.directory}/licenses</directory>
      <includes>
        <include>*.html</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <!-- default driver kar set -->
    <dependencySet>
      <includes>
        <include>*:pentaho-hadoop-shims-cdh61-kar:*</include>
        <include>*:pentaho-hadoop-shims-hdp30-kar:*</include>
        <include>*:pentaho-hadoop-shims-emr521-kar:*</include>
        <include>*:pentaho-hadoop-shims-dataproc1421-kar:*</include>
        <include>*:pentaho-hadoop-shims-cdpdc71-kar:*</include>
        <include>*:pentaho-hadoop-shims-mapr61-kar:*</include>
        <include>*:pentaho-hadoop-shims-hdi40-kar:*</include>
      </includes>
      <outputDirectory>./ADDITIONAL-FILES/drivers</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <dependencySet>
      <outputDirectory>.</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>pentaho:pentaho-data:zip</include>
      </includes>
      <outputFileNameMapping>pentaho-data.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>.</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>pentaho:pentaho-solutions:zip</include>
      </includes>
      <outputFileNameMapping>pentaho-solutions.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>.</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>pentaho:pentaho-style:war</include>
      </includes>
      <outputFileNameMapping>pentaho-style.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>.</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>pentaho:pentaho-war:war</include>
      </includes>
      <outputFileNameMapping>pentaho.${artifact.extension}</outputFileNameMapping>
    </dependencySet>

  </dependencySets>

</assembly>