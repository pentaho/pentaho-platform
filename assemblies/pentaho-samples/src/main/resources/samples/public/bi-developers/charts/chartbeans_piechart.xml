      <paint style="color: #4a0866;"/>
      <paint style="color: #ffaa00;"/>
      <paint style="color: #1e8ad3;"/>
      <paint style="color: #aa6611;"/>
      <paint style="color: #772200;"/>
      <paint style="color: #8b2834;"/>
      <paint style="color: #333333;"/>
